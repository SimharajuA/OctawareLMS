@model LeaveRequestViewModel
@{
    ViewData["Title"] = "Apply";
}

<h1>Apply For New Leave</h1>

<form asp-controller="Leave" asp-action="Apply" method="post">
   <div class="form-row">
    @*<input asp-for="Employee" value="@ViewBag.id" type="hidden"/>*@
    <div class="form-group">
    <label asp-for="LeaveType"></label>
        <select class="form-control" asp-for="LeaveType">
        <option value="">select leave type</option>
        <option value="sickleave">Sick Leave</option>
        <option value="maternityleave">Maternity Leave</option>
        <option value="vacationleave">Vacation Leave</option>
        <option value="hospitilizedleave">Hospitilized Leave</option>
    </select>
            <span asp-validation-for="LeaveType"></span>
    </div>
    <div class="form-group col-md-5">
    <label asp-for="StartDate"></label>
        <input class="form-control" asp-for="StartDate" type="date" />
            <span asp-validation-for="StartDate" />
    </div>
    <div class="form-group col-md-5">
    <label asp-for="EndDate"></label>
        <input class="form-control" asp-for="EndDate" type="date" />
            <span asp-validation-for="EndDate"></span>
    </div>
    <div class="form-group">
    <label asp-for="Comment"></label>
        <input class="form-control" asp-for="Comment" />
            <span asp-validation-for="Comment"></span>
    </div>
        <div asp-validation-summary="All"></div>

    <br />
    <button class="btn btn-primary" type="submit">Apply</button> &nbsp; &nbsp; <a class="btn btn-info" asp-action="Index" asp-controller="Home" asp-route-id="@ViewBag.id">Cancel</a>
    </div>
</form>

