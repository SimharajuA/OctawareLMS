@model LoginViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <h1>Welcome to Octaware Leave Management Portal</h1>
    <h2>Login</h2>
    <span class="text-danger">@TempData["invalid"]</span>
    <form asp-action="Login" asp-controller="Home">
       
        <div class="form-row mx-auto" style="width:300px">
        <div class="form-group col-md-12">
        <label asp-for="Id"></label>
        <input type="number" asp-for="Id"/>
        <br />
        <span asp-validation-for="Id"></span>
        </div>
        <div class="form-group col-md-12">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password"/>
        <br />
        <span asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="bg-primary">Login</button>

        </div>
    </form>

</div>
