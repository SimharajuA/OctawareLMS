@model LoginViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <h1>Welcome to Octaware Leave Management Portal</h1>
    <h2>Login</h2>
    <span class="text-danger">@TempData["invalid"]</span>
    <div class="form-control-lg">
        <form asp-action="Login" asp-controller="Home" method="post">

            <div class="form-row mx-auto" style="width:300px">
                <div class="form-group">
                    <label asp-for="Id"></label>
                    <input type="number" asp-for="Id" class="form-control" />
                    
                    <span asp-validation-for="Id" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                   
                    <span asp-validation-for="Password" class="alert-danger"></span>
                </div>
                <br />
                <button type="submit" class="bg-primary">Login</button>

            </div>
        </form>

</div>
   
</div>
